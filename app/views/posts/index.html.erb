<div class="row">
  <div class="col-3"></div>
  <div class="col-9">
  	<div class="row pt-5 rounded">
  	  <div class="col-1">
  	  	<%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
  	  </div>
  	  <div class="col-11">
  	  	<%= form_for @post do |f| %>
  	      <%= f.text_area :content, class: "form-control form-control-lg " %>
  	      <div class="row">
  	      	<div class="col-1">
  	          <i class="fas fa-map-marker-alt text-secondary"></i>
  	        </div>
  	        <div class="col-11">
  	          <%=f.text_field :address, class: "form-control form-control-lg ", placeholder: "location"%><br>
  	        </div>
  	      </div>
  	      <%= f.attachment_field :content_image, class: "btn btn-secondary" %>
  	      <%= f.submit "post", class: "btn btn-secondary mt-2 mb-5"%>
  	    <% end %>
  	  </div>
  	</div>
  	<% @posts.each do |post| %>
  	  <div class="border border-light">
        <div class="row">
      	  <div class="col-1">
      	  	<%= link_to user_path(post.user) do %>
      	      <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
      	    <% end %>
      	  </div>
      	  <div class="col-11">
      	  	<div class="row" style="height: 20px;"></div>
      	    <p>@<%= post.user.name %></p>
      	    <%= post.content %>
            <div><%= attachment_image_tag post, :content_image, :fill, 600, 400, class: "rounded mt-2 mb-2"%></div>
      	  </div>
        </div>
        <div class="row" style="height: 5px;"></div>
         <div class="row">
         	<div class="col-1"></div>
        	<div class="col-1">
        		<i class="fas fa-comment"></i>
        	</div>
        	<div class="col-7">
        		<i class="fas fa-heart"></i>
        	</div>
        	<div class="col-3">
        		<p><%= post.created_at %></p>
        	</div>
        </div>
      </div>
    <% end %>
  </div>
</div>